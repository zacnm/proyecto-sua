package sua.autonomouscar.mapeklite.adaptation.resources.probes;

import org.osgi.framework.BundleContext;

import es.upv.pros.tatami.adaptation.mapek.lite.artifacts.components.Probe;

public class SondaHandsOnWheel extends Probe {
	
	public static String ID = "Sonda Hands on Wheel";

	public SondaHandsOnWheel(BundleContext context) {
		super(context, ID);
	}

	public void reportHandsOnWheel(boolean handsOnWheel) {
		this.reportMeasure(handsOnWheel);
	}
}
